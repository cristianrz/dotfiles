#!/bin/bash

export PATH="${PATH}:$HOME/.local/bin/"

case "$0" in
  *bash)
    export PS1='\[\033[01;36m\][\u@\h\[\033[01;37m\] \W\[\033[01;36m\]]\$\[\033[00m\] '
    ;;
  *mksh)
    export PS1='Î» '
    ;;
  *)
    export PS1
    PS1="$(tput sgr0)"
    ;;
esac
export TERM="screen-256color"

# Stops git from prompting a graphical login
unset SSH_ASKPASS

# Infinite history.
HISTSIZE='' HISTFILESIZE=
