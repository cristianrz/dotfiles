#!/bin/env sh

# Modifies cd to do an ls everytime you access a directory
cd() { builtin cd "$@" && ls && echo ""; }

# Find by name and is case insensitive
search() { find . -iname "*$1*" 2>/dev/null; }

start() {
 nohup "$@" >/dev/null 2>&1 &
}

openlink() {
 nohup xdg-open "$(cat "$1")" >/dev/null 2>&1 &
}

# shellcheck disable=SC2009
pid() { ps -ef | grep -E "PID|$1" | grep -v 'grep'; }

own(){ sudo chown -R "$(whoami)":"$(whoami)" "$@"; }
