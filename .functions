#!/bin/env sh
#
# Functions

# ls and print a new line after cd
cd() { builtin cd "$@" && ls && echo ""; }

# opens a link inside a text file
openlink() {
  xdg-open "$(cat "$1")" >/dev/null 2>&1 &
}

# Chowns a folder to yourself
own(){ sudo chown -R "$(whoami)":"$(whoami)" "$@"; }

# Similar to what ps aux | grep would do
pid() { ps -ef | grep -E "PID|$1" | grep -v 'grep'; }

# Finds a file/dir case-insensitive
search() { find . -iname "*$1*" 2>/dev/null; }

# starts a command in the background
start() {
  nohup "$@" >/dev/null 2>&1 &
}

