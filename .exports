#!/bin/env sh

test -d ~/go && export GOPATH="$HOME/go"
test -d ~/scripts && export PATH="$HOME/scripts:${PATH}"

if test -d "$HOME"/go/bin; then
  export PATH="$HOME/go/bin:${PATH}"
  export GOBIN="$HOME/go/bin"
fi

case "$0" in
*bash*)
  # get current branch in git repo
  # shellcheck disable=SC1117
  # shellcheck disable=SC2063
  PS1="\[\e[31m\]\u\[\e[m\] \[\e[34m\]\W\[\e[m\] \[\e[32m\]($(git branch 2>/dev/null | grep '^*' | colrm 1 2))\[\e[m\] \[\e[31m\]â–º\[\e[m\] "
  export PS1
  # Infinite history.
  HISTSIZE='' HISTFILESIZE=
  ;;
*'mksh')
  export PS1="[30m[46m ${USER}:\${PWD} \$ [49m[39m "

  ;;

*)
  PS1="$(tput sgr0)"
  export PS1
  ;;
esac

export TERM="screen-256color"
