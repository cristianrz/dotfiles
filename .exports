# Exported variables

path_add(){
    case "$PATH" in
    "") PATH="$*" ;;
    *) PATH="$PATH":"$*" ;;
    esac
}

export GOBIN="$HOME/go/bin"
export GOPATH="$HOME/go"
export TERM="screen-256color"

# Infinite history.
HISTFILESIZE=
#PS1="[97;44m \${USER} [37;100m \$(basename \$PWD) \$ [39;49m " export PS1

PATH=
path_add '.'
path_add "$HOME"/scripts
path_add "$HOME"/.local/bin
path_add "$HOME"/go/bin
path_add /usr/local/bin
path_add /usr/local/sbin
path_add /usr/bin
path_add /usr/sbin
path_add /usr/local/plan9/bin

export PATH
