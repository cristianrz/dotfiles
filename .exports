#!/bin/env sh

export PATH="${PATH}:$HOME/.local/bin/"

if test -d /h/.local/bin; then
  export PATH="${PATH}:/h/.local/bin/"
fi

case "$0" in
  *bash*)
    export PS1="\[\e[31m\]\u\[\e[m\] \[\e[34m\]\W\[\e[m\] \[\e[31m\]â–º\[\e[m\] "
    # Infinite history.
    HISTSIZE='' HISTFILESIZE=
    ;;
  *)
    export PS1
    PS1="$(tput sgr0)"
    ;;
esac

export TERM="screen-256color"

if test -d ~/go; then
  export GOPATH="$HOME/go"
fi

if test -d $HOME/go/bin; then
  export PATH="${PATH}:$HOME/go/bin"
fi
