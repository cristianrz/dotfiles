  export GOPATH="$HOME/go"
fi

if test -d "$HOME"/go/bin; then
  export PATH="$HOME/go/bin:${PATH}"
  export GOBIN="$HOME/go/bin"
fi

export PATH="$HOME/sh/bin:${PATH}"
export SHPATH="$HOME/sh"

case "$0" in
-bash)
